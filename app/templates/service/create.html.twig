{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <!-- Content Wrapper. Contains page content -->


        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Service</h3>
                    <div class="box-tools pull-right">
                        <a href="{{ path('app_service') }}" >
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <section class="content">

                    <div class="row">
                        <label class="control-label col-md-2" for="">métier:</label>
                        <div class="col-md-10">
                            <p>{{ form_widget(form.mission, {'attr': {'class': 'form-control', 'placeholder':'métier'}}) }}</p>
                        </div>

                        <label class="control-label col-md-2" for="">designation :</label>
                        <div class="col-md-10">
                            <p>{{ form_widget(form.designation, {'attr': {'class': 'form-control', 'placeholder':'designation'}}) }}</p>
                        </div>
                        <label class="control-label col-md-2" for="">Date :</label>
                        <div class="col-md-10">
                            {% set currentDate = date('Y-m-d') %}
                            {% set currentMonth = date(currentDate, 'm') %}
                            {% set currentYear = date(currentDate, 'Y') %}
                            <form>
                                <input type="date" name="date" value="{{ currentYear }}-{{ currentMonth }}">
                                <button type="submit">Soumettre</button>
                            </form>

                        </div>



                        <label class="control-label col-sm-2" for="">description :</label>
                        <div class="col-sm-10">
                            <p>{{ form_widget(form.description, {'attr': {'class': 'form-control',  'placeholder':'description'}}) }}</p>
                        </div>



                        <div class="card-footer col-sm-4 text-center">

                            <div class="form-group col-sm-12">
                                <button type="submit" class="btn btn-primary">Valider</button>
                            </div>



                        </div>
                    </div>
                </section>
            </div>
        </section>
    </div>

    {{ form_end(form) }}
{% endblock %}
