{% extends 'base.html.twig' %}

{% block title %}Categorie List{% endblock %}

{% block body %}

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Mes taches</h3>
                <form method="GET" action="{{ path('app_task') }}">
                    <div class="form-group pull-right">
                        <label for="selectedDate">Sélectionner une date de tâche :</label>
                        <input type="date" id="selectedDate" name="selectedDate" class="form-control" max="{{ date() | date('Y-m-d') }}">
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">Afficher</button>
                </form>

            </div>

            <div class="box-footer">
                {% if services %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>Designation</th>
                                <th>Mission</th>
                                <th>dataDebut</th>
                                <th>dataFin</th>
                                <th>durée</th>
                                <th>statue</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for service in services %}
                                <tr align="center">
                                    <td>{{ service.id }}</td>
                                    <td>{{ service.designation }}</td>
                                    <td>{{ service.mission }}</td>
                                    <td>{{ service.date | date('d/m/Y') }}</td>
                                    <td>{{ dateFin | date('d/m/Y') }}</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div><!-- /.box -->
    </section><!-- /.content -->
    </div>
{% endblock %}
