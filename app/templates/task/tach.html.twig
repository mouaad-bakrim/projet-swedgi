{% extends 'base.html.twig' %}

{% block title %}Task List{% endblock %}

{% block body %}

    <section class="content">

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Mes taches</h3>
                <form method="GET" action="{{ path('app_task') }}">
                    <div class="form-group pull-right">
                        <input type="date" id="selectedDate" name="selectedDate" class="form-control" max="{{ date() | date('Y-m-d') }}">
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">Afficher</button>
                </form>

            </div>

            <div class="box-footer">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>Client</th>
                                <th>Montant</th>
                                <th>Service</th>
                                <th>Duree</th>
                                <th>statue</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for contrat in contrats %}
                                <tr align="center">
                                    <td>{{ contrat.id }}</td>
                                    <td>{{ contrat.client }}</td>
                                    <td>{{ contrat.montant }}</td>
                                    <td>{{ contrat.service }}</td>
                                    <td>{{ contrat.service.duree }}</td>
                                    <td>
                                        {% if contrat.tache %}
                                            <a href="{{ path('task_workflow', {id : contrat.tache.id}) }}">{{ contrat.tache.status }}</a>
                                        {% endif %}
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
    </section>
    </div>
{% endblock %}
