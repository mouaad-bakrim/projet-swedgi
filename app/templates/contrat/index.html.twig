{% extends 'base.html.twig' %}

{% block title %}contrat{% endblock %}

{% block body %}



    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                <small>Welcome Administrator!</small>
            </h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">contrat</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i></button>
                        <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i
                                    class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <!-- Start creating your amazing application! -->

                    <a href="{{ path('contrat_add') }}" class="btn btn-sm btn-success btn-sm">Add contrat
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></a>


                    <div id="table-laundry"></div>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    <div class="table-responsive">
                        <table id="myTable-laundry" class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Date Debut</th>
                                <th>Client</th>
                                <th>TacheType</th>
                                <th>montant</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for contrat in contrats %}
                                <tr align="center">
                                    <td><input type="checkbox" name="categorie[]" value="{{ contrat.id }}"></td>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ contrat.dateDebut }}</td>
                                    <td>{{ contrat.client }}</td>
                                    <td>{{ contrat.tacheType }}</td>
                                    <td>{{ contrat.montant }}</td>

                                    <td class="d-flex justify-content-between align-items-center">

                                        <a href="{{ path('contrat_add',{id: contrat.id}) }}"  class="btn btn-warning btn-xs">
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                        </a>
                                        <a href="{{ path('contrat_delete',{id: contrat.id}) }}" class="btn btn-xs btn-danger">
                                            <span class="fa fa-trash-o" aria-hidden="true"></span>

                                        </a>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div><!-- /.box -->


        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->

{% endblock %}
