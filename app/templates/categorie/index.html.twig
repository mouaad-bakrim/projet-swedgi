{% extends 'base.html.twig' %}

{% block title %}Categorie List{% endblock %}

{% block body %}

    <div class="row my-2">
        <div class="col-md-7 mx-auto my-1">
            <div class="card" >
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>List des categories</span>

                    <div class="toolbar" style="margin-left: auto">
                        <button type="button" class="btn btn-info add-new" data-bs-toggle="modal"
                                data-bs-target="#addEmployee"><i class="fa fa-plus"></i> Add New
                        </button>
                    </div>

                    <div class="modal fade" id="addEmployee" tabindex="-1" aria-labelledby="exampleModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <div class="row">
                                        <h5 class="modal-title" id="exampleModalLabel">Add new Categorie</h5>

                                        <div class="input-group col-md-12" style="padding:11px;">
                                            <input type="text" class="form-control" id="exampleInputEmail1"
                                                   placeholder="Groupe">
                                        </div>
                                        <div class="input-group col-md-12" style="padding:11px;">
                                            <input type="text" class="form-control" id="exampleInputEmail1"
                                                   placeholder="Groupe">
                                        </div>
                                        <div class="input-group col-md-12" style="padding:11px;">
                                            <input type="text" class="form-control" id="exampleInputEmail1"
                                                   placeholder="Groupe">
                                        </div>
                                    </div>

                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">


                                </div>

                            </div>
                        </div>
                    </div>


                </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Libelle</th>
                                <th>Description</th>
                                <th>Code groupe</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for categorie in categories %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ categorie.libellee }}</td>
                                    <td>{{ categorie.description }}</td>
                                    <td>{{ categorie.codeGroupe }}</td>
                                    <td class="d-flex justify-content-between align-items-center">
                                        <a href="{{ path('categorie_show',{id: categorie.id}) }}"
                                           class="btn btn-sm btn-dark">show</a>
                                        <a href="{{ path('categorie_edit',{id: categorie.id}) }}"
                                           class="btn btn-sm btn-warning">edit</a>
                                        <form id="{{ categorie.id }}"
                                              action="{{ path('categorie_delete',{id: categorie.id}) }}"
                                              method="post"></form>
                                        <button onclick="deleteItem('{{ categorie.id }}')"
                                                class="btn btn-sm btn-danger">delete
                                        </button>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>

                        </table>
                    </div>

                </div>

            </div>
    </div>






            {% endblock %}
