
{% extends 'base.html.twig' %}

{% block title %}Categorie List{% endblock %}

{% block body %}


    <div class="row my-5">
        <div class="col-md-7 mx-auto my-5" >
            <div class="card" style="width: 750px; margin-top:-80px;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>List des categories</span>


                            <button type="button" class="btn btn-info add-new" data-bs-toggle="modal" data-bs-target="#addClient"><i class="fa fa-plus"></i> Add New</button>



                    <div class="modal fade" id="addClient" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

                        <body>
                        <div class="my-4">
                            <div class="toolbar">
                                <button type="button" class="btn btn-info add-new" data-bs-toggle="modal" data-bs-target="#addEmployee"><i class="fa fa-plus"></i> Add New</button>
                            </div>
                        </div>

                        <div class="modal fade" id="addEmployee" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Add new Redevable</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">

                                        <form>
                                            <div class="mb-3">
                                                <label  class="form-label">Nom </label>
                                                <input type="text" name="nom"  class="form-control"  aria-describedby="emailHelp" [(ngModel)]="redevable.nom">
                                            </div>
                                            <div class="mb-3">
                                                <label  class="form-label">Prenom </label>
                                                <input type="text" name="prenom" class="form-control"   aria-describedby="emailHelp" [(ngModel)]="redevable.prenom">
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Cin </label>
                                                <input type="text" name="cin" class="form-control"   aria-describedby="emailHelp" [(ngModel)]="redevable.cin">
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Add redevable</button>
                                            </div>
                                        </form>

                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="col-md-8 mx-auto">
                            <div class="card">
                                <div class="card-header">
                                    Create new categorie
                                </div>

                            </div>
                        </div>
                    </div>







                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Libelle</th>
                                <th>Description</th>
                                <th>Code groupe</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for categorie in categories %}
                                <tr>
                                    <td>{{loop.index}}</td>
                                    <td>{{ categorie.libellee }}</td>
                                    <td>{{ categorie.description }}</td>
                                    <td>{{ categorie.codeGroupe }}</td>
                                    <td class="d-flex justify-content-between align-items-center">
                                        <a href="{{ path('categorie_show',{id: categorie.id}) }}" class="btn btn-sm btn-dark">show</a>
                                        <a href="{{ path('categorie_edit',{id: categorie.id}) }}" class="btn btn-sm btn-warning">edit</a>
                                        <form id="{{ categorie.id }}" action="{{ path('categorie_delete',{id: categorie.id}) }}" method="post"></form>
                                        <button onclick="deleteItem('{{ categorie.id }}')" class="btn btn-sm btn-danger">delete</button>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
