{% extends 'base.html.twig' %}

{% block title %}{% endblock %}




{% block body %}
    {{ form_start(form) }}
    <div class="row my-4" style="margin-top: 20px">
    <div class="col-md-8 mx-auto">
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <!-- left column -->
                            <div class="col-md-12">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Add Client</h3>
                                        <div class="card-tools">
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                <i class="fas fa-minus"></i>
                                            </button>

                                        </div>
                                    </div>


                                    <div class="card-body ">
                                        <div class="row">
                                            <div class="form-group col-md-6">

                                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                            <div class="form-group col-md-6">
                                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-group col-md-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                                </div>
                                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                            </div>

                                            <div class="input-group col-md-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                                </div>
                                                {{ form_widget(form.telMobile, {'attr': {'class': 'form-control'}}) }}
                                            </div>

                                            <div class="input-group col-md-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">@</span>
                                                </div>
                                                {{ form_widget(form.telBureau, {'attr': {'class': 'form-control'}}) }}
                                            </div>

                                            <div class="input-group col-md-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">@</span>
                                                </div>
                                                {{ form_widget(form.fax, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                        <br>

                                        <div class="row">
                                            <div class="form-group col-md-3">
                                                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                            <div class="form-group col-md-3">
                                                {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}


                                            </div>
                                            <div class="form-group col-md-3">
                                                {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            <div class="form-group col-md-3">
                                                {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}


                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="form-group col-md-2">
                                                {{ form_widget(form.rc, {'attr': {'class': 'form-control'}}) }}


                                            </div>
                                            <div class="form-group col-md-2">
                                                {{ form_widget(form.identicicationFiscale, {'attr': {'class': 'form-control'}}) }}


                                            </div>
                                            <div class="form-group col-md-2">
                                                {{ form_widget(form.ice, {'attr': {'class': 'form-control'}}) }}


                                            </div>
                                            <div class="form-group col-md-2">
                                                {{ form_widget(form.cnss, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            <div class="form-group col-md-2">
                                                {{ form_widget(form.capital, {'attr': {'class': 'form-control'}}) }}


                                            </div>
                                            <div class="form-group col-md-2">
                                                {{ form_widget(form.patente, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-4">
                                                {{ form_widget(form.societe, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            <div class="form-group col-md-4">
                                                {{ form_widget(form.nomSociete, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            <div class="form-group col-md-4">
                                                {{ form_widget(form.siteWeb, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-4">

                                                <input type="text" class="form-control" id="exampleInputEmail1"
                                                       placeholder="Groupe">
                                            </div>
                                            <div class="form-group col-md-4">
                                                {{ form_widget(form.Categorie, {'attr': {'class': 'form-control'}}) }}


                                            </div>
                                            <div class="form-group col-md-4">
                                                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}


                                           <!--     <select class="form-control" placeholder="Type">
                                                    <option>Aucan</option>
                                                    <option>California</option>
                                                    <option>Delaware</option>
                                                    <option>Tennessee</option>
                                                </select>-->
                                            </div>
                                        </div>

                                    </div>

                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Valid√©</button>
                                    </div>


                                </div>


                            </div>


                        </div>
                    </div>


                </section>



                </div>

    </div>
    {{ form_end(form) }}
{% endblock %}