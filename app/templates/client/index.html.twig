{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}

    <div class="row my-2">
        <div class="col-md-7 mx-auto my-1" >
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>List des categories</span>
                </div>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Ville</th>
                                <th>TelMobile</th>
                                <th>Email</th>
                                <th>NomSociete</th>
                                <th>Type</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for client in clients %}
                                <tr>
                                    <td>{{ client.id }}</td>
                                    <td>{{ client.nom }}</td>
                                    <td>{{ client.prenom }}</td>
                                    <td>{{ client.ville }}</td>
                                    <td>{{ client.telMobile }}</td>
                                    <td>{{ client.email }}</td>
                                    <td>{{ client.nomSociete }}</td>
                                    <td>{{ client.type }}</td>
                                    <td class="d-flex justify-content-between align-items-center">
                                        <a href="{{ path('client_view',{id: client.id}) }}" class="btn btn-sm btn-dark">show</a>
                                        <a href="{{ path('client_edit',{id: client.id}) }}" class="btn btn-sm btn-warning">edit</a>
                                        <a href="{{ path('client_delete',{id: client.id}) }}" class="btn btn-sm btn-danger">delete</a>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
            </div>

        </div>
    </div>

{% endblock %}