


{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1 class="text-success">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <small>add Collaborator</small>
            </h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Collaborator</h3>
                </div>
                <section class="content">

                    <div class="row">
                        <label class="control-label col-md-2" for="">username :</label>
                        <div class="col-md-10">
                            <p>{{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder':'username'}}) }}</p>
                        </div>

                        <label class="control-label col-md-2" for="">username :</label>
                        <div class="col-md-10">
                            <p>{{ form_widget(registrationForm.roles, {'attr': {'class': 'form-control', 'placeholder':'roles'}}) }}</p>
                        </div>
                        <label class="control-label col-md-2" for="">email :</label>
                        <div class="col-md-10">
                            <p>{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder':'email'}}) }}</p>
                        </div>

                        <label class="control-label col-sm-2" for="">plainPassword :</label>
                        <div class="col-sm-10">
                            <p>{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control',  'placeholder':'plainPassword'}}) }}</p>
                        </div>

                        {{ form_end(registrationForm) }}



                        <div class="card-footer col-sm-4 text-center">
                            <button type="submit" class="btn bg-premary">Add</button>


                        </div>
                    </div>
                </section>
            </div>
        </section>
    </div>



{% endblock %}
