{% extends 'base.html.twig' %}

{% block title %}Users List{% endblock %}

{% block body %}






    <!-- Main content -->
    <section class="content">


        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Collaborator</h3>
                <div class="box-tools pull-right">
                    <a href="{{ path('app_register') }}" class="btn btn-sm btn-success btn-sm pull-right">   <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Add Collaborator
                    </a>
                </div>
            </div>

            <div class="box-footer">

                <div class="table-responsive">
                    <table id="myTable-laundry" class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>

                            <th>id</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Roles</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for register in registers %}
                        <tr align="center">
                            <td>{{ register.id }}</td>
                            <td><span class="logo-mini pull-left"><img src="{{ asset('assets/img/logo.jpg') }}" width="35px"
                                                             height="35px"  style="border-radius:30px"></span>
                            {{ register.username }}</td>
                            <td>{{ register.email }}</td>
                            <td>********</td>
                            <td>{{ register.roles ? register.roles|json_encode : '' }}
                            </td>


                            <td class="d-flex justify-content-between align-items-center">

                                <a  class="btn btn-warning btn-xs">
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                                <a  href="{{ path('register_delete',{id: register.id}) }}" class="btn btn-xs btn-danger">
                                    <span class="fa fa-trash-o" aria-hidden="true"></span>

                                </a>
                            </td>

                        </tr>
                        {% endfor %}



                        </tbody>
                    </table>
                </div>

            </div>
        </div><!-- /.box -->


    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

{% endblock %}
